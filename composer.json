{
  "name": "simplon/core",
  "description": "Strongly opinionated MVC framework for rapid development",
  "homepage": "https://github.com/fightbulc/simplon_core",
  "type": "library",
  "keywords": [
    "mvc",
    "model",
    "view",
    "controller",
    "templates",
    "router",
    "mustache",
    "locales",
    "i18n",
    "fast",
    "lightweight",
    "form",
    "doi"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Tino Ehrich",
      "email": "tino@bigpun.me",
      "role": "developer"
    }
  ],
  "require": {
    "php": ">=7.1",
    "simplon/component_semanticui": "0.0.*",
    "simplon/locale": "^0.4",
    "simplon/form": "^2.1",
    "simplon/url": "^0.4",
    "simplon/template": "^0.8",
    "simplon/device": "^0.0",
    "simplon/helper": "^1.0",
    "relay/relay": "^1.1",
    "zendframework/zend-diactoros": "^1.3",
    "fig/http-message-util": "^1.1",
    "filp/whoops": "^2.1",
    "guzzlehttp/guzzle": "^6.2",
    "mnapoli/silly": "^1.6"
  },
  "config": {
    "component-dir": "public/assets/vendor"
  },
  "autoload": {
    "psr-4": {
      "Simplon\\Core\\": "src/"
    }
  },
  "bin": ["bin/core"]
}
