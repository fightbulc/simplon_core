#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Silly\Application;
use Symfony\Component\Console\Output\OutputInterface;

$app = new Application();

$app->command('component [namespace] [--with-view] [--with-rest] [--with-storage] [--with-config]', function ($namespace, $withView, $withRest, $withStorage, $withConfig, OutputInterface $output) {
    if ($namespace)
    {
        $text = 'Hello, ' . $namespace;
        $output->writeln($text);
    }
});

$app->run();